<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="main.java.components.Treatment" table="treatment">
        <id name="id" column="ID_APPOINTMENT">
            <generator class="native"/>
        </id>
        <property name="procedure" column="T_PROCEDURE" type="java.lang.String"/>
        <property name="medicine" column="MEDICINE" type="java.lang.String"/>
        <property name="operation" column="OPERATION" type="java.lang.String"/>
        <property name="diagnose" column="DIAGNOSE" type="java.lang.String"/>

        <one-to-one name="appointment" class="main.java.components.Appointment"/>
    </class>
</hibernate-mapping>