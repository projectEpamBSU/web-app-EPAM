<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="main.java.users.stuff.Doctor" table="doctor">
        <id name="id" column="ID_DOCTOR">
            <generator class="native"/>
        </id>
        <property name="name" column="FIRST_NAME" type="java.lang.String"/>
        <property name="surname" column="SECOND_NAME" type="java.lang.String"/>
        <property name="age" column="AGE" type="int"/>
        <property name="login" column="LOGIN" type="java.lang.String"/>
        <property name="password" column="PASSWORD" type="java.lang.String"/>
        <property name="department" column="DEPARTMENT" type="java.lang.String"/>
        <property name="isHeadOfDepartment" column="IS_HEAD_OF_DEPARTMENT" type="boolean"/>

        <set name="appointments" table="appointment" lazy="true">
            <key>
                <column name="ID_DOCTOR" not-null="true"/>
            </key>
            <one-to-many class="main.java.components.Appointment"/>
        </set>
    </class>
</hibernate-mapping>